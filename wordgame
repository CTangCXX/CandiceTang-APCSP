import random


# Function to display the menu message
def menu(scoreboard):
    print(
        "===================================================================================================="
    )
    print(
        "#                                  Welcome to the Word Guessing Game!                              #"
    )
    print(
        "#                     You have 3 topics to choose from: Animals, Vegetables, Places.               #"
    )
    print(
        "#            You will earn points based on the number of tries it takes to guess the word.         #"
    )
    print(
        "#                         Press 1 if you want to display this intro message                        #"
    )
    print(
        "#                         Press 2 if you want to choose animals as your topic                      #"
    )
    print(
        "#                       Press 3 if you want to choose vegetables as your topi                      #"
    )
    print(
        "#                         Press 4 if you want to choose places as your topic                       #"
    )
    print(
        "#                                Press 5 if you want a random topic                                #"
    )
    print(
        "#                           Press 6 if you want to see your scoreboard                             #"
    )
    print(
        "#                                  Press 7 if you want to exit                                     #"
    )
    print(
        "===================================================================================================="
    )
    print("")
    print("SCOREBOARD:")
    for topic, score in scoreboard.items():
        print(f"{topic}: {score}")  # Display each topic and its corresponding score
    print("")


# Function to select a word from the given topic
def select_word(topic):
    # Dictionary containing words for each topic
    words = {
        "Animals": [
            "cat",
            "dog",
            "elephant",
            "lion",
            "tiger",
            "deer",
            "sheep",
            "cow",
            "tiger",
            "mouse",
            "rabbit",
            "duck",
            "horse",
            "pig",
            "fish",
            "goat",
            "chicken",
            "fox",
            "monkey",
            "bear",
        ],
        "Vegetables": [
            "carrot",
            "potato",
            "lettuce",
            "cucumber",
            "tomato",
            "broccoli",
            "beans",
            "garlic",
            "onions",
            "pepper",
            "mushroom",
            "artichoke",
            "asparagus",
            "califlower",
            "cabbage",
            "sprouts",
            "seaweed",
            "turnip",
            "radish",
            "ginger",
        ],
        "Places": [
            "beach",
            "mountain",
            "forest",
            "desert",
            "city",
            "school",
            "library",
            "museum",
            "home",
            "airport",
            "train station",
            "park",
            "classroom",
            "markey",
            "mall",
            "field",
            "court",
            "amusement park",
            "chapel",
            "church",
        ],
    }
    # Randomly select a word from the list of words for the topic
    return random.choice(words[topic])


# Function to play the game with the selected topic
def play_game(word):
    max_attempts = len(word)  # Maximum number of attempts allowed
    score = max_attempts  # Initial score is the maximum attempts
    attempts = 0  # Counter for attempts
    correct_guess = False  # To indicate if the word is guessed correctly

    # Loop until the maximum number of attempts is reached or the word is guessed correctly
    while attempts < max_attempts and not correct_guess:
        guess = input(
            "Guess a letter or the whole word: "
        ).lower()  # Prompt the user to guess
        if len(guess) == 1:  # Guessing a letter
            if guess in word:
                print(
                    "Correct guess, the letter is in the word!"
                )  # Inform the user about correct guess of a letter
            else:
                print("Incorrect guess.")  # Message for incorrect guess
                attempts += 1  # Increment the attempts counter
                score -= 1  # Decrease the score for each incorrect guess
        elif guess == word:  # Guessing the whole word
            correct_guess = True  # Set flag to True if the guess is correct
        else:
            print("Incorrect guess. Try again.")  # Display message for incorrect guess
            attempts += 1  # Increment the attempts counter
            score -= 1  # Decrease the score for each incorrect guess

    # Display the result of the game
    if correct_guess:
        print("Congratulations! You guessed the word:", word)
        print("You earned", score, "points.")
    else:
        print("Out of guesses! The word was:", word)

    return score  # Return the earned score


# Function to update the scoreboard with the earned score for a given topic
def update_scoreboard(topic, score, scoreboard):
    scoreboard[topic] += score  # Add the score to the scoreboard for the given topic


# Function to display the current scoreboard
def display_scoreboard(scoreboard):
    print("SCOREBOARD:")
    for topic, score in scoreboard.items():
        print(f"{topic}: {score}")  # Display each topic and its corresponding score


# Main function to run the game
def main():
    # Initialize the scoreboard with initial scores for each topic
    scoreboard = {"Animals": 0, "Vegetables": 0, "Places": 0}

    menu(scoreboard)  # Display the menu message

    # Main game loop
    while True:
        choice = input("Enter your choice (1-7): ")

        if choice == "1":
            menu(scoreboard)
        elif choice == "2":
            word = select_word("Animals")
            score = play_game(word)
            update_scoreboard("Animals", score, scoreboard)
        elif choice == "3":
            word = select_word("Vegetables")
            score = play_game(word)
            update_scoreboard("Vegetables", score, scoreboard)
        elif choice == "4":
            word = select_word("Places")
            score = play_game(word)
            update_scoreboard("Places", score, scoreboard)
        elif choice == "5":
            random_topic = random.choice(list(scoreboard.keys()))
            print(f"Randomly selected topic: {random_topic}")
            word = select_word(random_topic)
            score = play_game(word)
            update_scoreboard(random_topic, score, scoreboard)
        elif choice == "6":
            display_scoreboard(scoreboard)
        elif choice == "7":
            print("Thank you for playing!")
            break
        else:
            print("Invalid choice. Please select a number from 1 to 7.")
            continue  # Continue to the next iteration of the loop if the choice is invalid


# Run the main function to start the game
if __name__ == "__main__":
    main()
